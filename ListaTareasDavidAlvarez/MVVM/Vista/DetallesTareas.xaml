<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListaTareasDavidAlvarez.MVVM.Vista.DetallesTareas"
             Title="DetallesTareas">
    <StackLayout Padding="10">
        <Entry Text="{Binding Nombre}" Placeholder="Nombre de la tarea" />
        <Button Text="Eliminar Tarea" Command="{Binding EliminarTareaCommand}" CommandParameter="{Binding TareaSeleccionada}" />
        <Button Text="Volver" Clicked="OnBackButtonClicked" />
        <Button Text="Guardar" Clicked="OnSaveClicked" />
    </StackLayout>
</ContentPage>