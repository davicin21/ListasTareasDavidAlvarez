<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListaTareasDavidAlvarez.MVVM.Vista.Principal"
             Title="Principal">
    <StackLayout Padding="10">
        <ListView ItemsSource="{Binding ListaTareas}" 
                  SelectedItem="{Binding TareaSeleccionada}" 
                  ItemTapped="OnItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="5">
                            <CheckBox IsChecked="{Binding Completada}" />
                            <Label Text="{Binding Nombre}" VerticalOptions="Center" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Agregar Tarea" Command="{Binding AgregarTareaCommand}" />
    </StackLayout>
</ContentPage>